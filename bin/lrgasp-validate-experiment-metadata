#!/usr/bin/env python3

import sys
from os import path as osp
import argparse
import logging

sys.path.insert(0, osp.normpath(osp.join(osp.dirname(__file__), "../lib")))

from lrgasp import handle_prog_errors
from lrgasp import LrgaspException
from lrgasp import experiment

def parse_args():
    desc = """Validate that an LRGASP experiment meets requirements.
    """
    parser = argparse.ArgumentParser(description=desc)
    parser.add_argument("experiment_json",
                        help="experiment JSON")
    return parser.parse_args()

def main(args):
    logging.getLogger().setLevel(logging.WARN)
    try:
        experiment.experiment_load(args.experiment_json)
    except LrgaspException as ex:
        handle_prog_errors(ex)

main(parse_args())
