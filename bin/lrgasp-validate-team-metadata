#!/usr/bin/env python3

import argparse
import logging
from lrgasp import handle_prog_errors
from lrgasp import LrgaspException
from lrgasp import team

def parse_args():
    desc = """Validate that an LRGASP team meets requirements.
    """
    parser = argparse.ArgumentParser(description=desc)
    parser.add_argument("team_json",
                        help="team JSON")
    return parser.parse_args()

def main(args):
    logging.getLogger().setLevel(logging.WARN)
    try:
        team.team_load(args.team_json)
    except LrgaspException as ex:
        handle_prog_errors(ex)

main(parse_args())
